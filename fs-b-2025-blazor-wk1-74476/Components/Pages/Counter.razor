@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<p> My name is @myName</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment</button>

<button class="btn btn-primary" @onclick="ShowName">Show Name </button>

<button class="btn btn-primary" @onclick="DecrementCount">Decrement</button>

<button class="btn btn-primary" @onclick="DecrementCountNoNegative">Decrement No negative</button>



@code {

    [Parameter]
    public int IncrementAmount { get; set; } = 5;
    [Parameter]
    public int DecrementAmount { get; set; } = 1;


    private int currentCount = 0;

    private string myName = "";

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void DecrementCountNoNegative()
    {
        if (currentCount > 0)
        {
            currentCount--;
        }
    }

    private void ShowName()
	{
		myName = "Luis ";
	}
}
